{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    // "allowJs": true,
    // "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // "noEmitOnError": true,
    
    // блок настроек строгости (strict: true)
    "strict": true,
    "noImplicitAny": false, //требует всегда указывать тип (any),
    "strictNullChecks": false, //требует делать проверки на null и undefined

    // "noPropertyAccessFromIndexSignature": false,

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES6",
    "moduleResolution": "node",

    "noUnusedParameters": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
